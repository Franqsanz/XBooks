---
export interface Props {
  title: string;
  text?: string;
}

const { title, text } = Astro.props as Props;
---

<section class="flex bg-lime-100 justify-center text-center py-52">
  <div class="max-w-2xl">
    <h1 class="text-5xl tracking-tight font-extrabold sm:text-6xl md:text-7xl text-lime-700 mb-4 px-4">{title}</h1>
    <p class="text-black text-2xl md:text-3xl">{text}</p>
  </div>
</section>