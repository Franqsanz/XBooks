---
export interface props {
  title: string;
  text?: string;
}

const { title, text } = Astro.props;
---

<!-- bg-gradient-to-b from-cyan-200 via-cyan-300 to-blue-700 -->

<section class="flex bg-white justify-center text-center py-28">
  <div class="max-w-2xl">
    <h1 class=" text-lime-600 text-7xl mb-4 font-bold">{title}</h1>
    <p class="text-black text-3xl">{text}</p>
  </div>
</section>