---
export interface props {
  title: string;
  text?: string;
}

const { title, text } = Astro.props;
---

<!-- bg-gradient-to-b from-cyan-200 via-cyan-300 to-blue-700 -->

<section class="flex bg-lime-100 justify-center text-center py-28">
  <div class="max-w-2xl">
    <h1 class="text-5xl tracking-tight font-extrabold sm:text-6xl md:text-7xl text-lime-700 mb-4 px-4">{title}</h1>
    <p class="text-black text-3xl">{text}</p>
  </div>
</section>