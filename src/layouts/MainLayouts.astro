---
import Header from '../components/Header.astro';
import MainHead from '../components/MainHead.astro';

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <title>{title}</title>
    <MainHead />
  </head>
  <body class="font-sans bg-gray-50">
    <Header />
    <main class="mt-16">
      <slot />
    </main>
    <footer class="text-center text-white bg-lime-700 p-10">
      Construido con Astro + TailwindCSS
    </footer>
  </body>
</html>